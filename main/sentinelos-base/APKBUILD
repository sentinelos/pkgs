# Contributor: Natanael Copa <ncopa@sentineloslinux.org>
# Maintainer: Natanael Copa <ncopa@sentineloslinux.org>
pkgname=sentinelos-base
pkgver=3.16.0
pkgrel=0
pkgdesc="Meta package for minimal sentinelos base"
url="https://sentineloslinux.org"
arch="noarch"
license="MIT"
depends="sentinelos-baselayout sentinelos-conf apk-tools busybox busybox-suid busybox-initscripts
	openrc libc-utils sentinelos-keys"
makedepends=""
install=""
subpackages=""
replaces="sentinelos-baselayout"
source=""

build() {
	return 0
}

package() {
	mkdir -p "$pkgdir"/etc
	# create /etc/sentinelos-release
	echo $pkgver > "$pkgdir"/etc/sentinelos-release
	local _ver="$(echo "$pkgver" | grep -E -o '^[0-9]+\.[0-9]+')"
	local _rel="v$_ver"
	case "$pkgver" in
	*_alpha*|*_beta*|*_pre*)
		_ver="$pkgver (edge)"
		_rel="edge"
		;;
	esac

	# create /etc/issue
	cat >"$pkgdir"/etc/issue<<EOF
Welcome to SentinelOS $_ver
Kernel \\r on an \\m (\\l)

EOF

	# create os-release
	cat >"$pkgdir"/etc/os-release<<EOF
NAME="SentinelOS"
ID=sentinelos
VERSION_ID=$pkgver
PRETTY_NAME="SentinelOS $_rel"
HOME_URL="https://sentineloslinux.org/"
BUG_REPORT_URL="https://gitlab.sentineloslinux.org/sentinelos/aports/-/issues"
EOF

	# create secfixes.d repository list
	mkdir -p "$pkgdir"/etc/secfixes.d
	cat >"$pkgdir"/etc/secfixes.d/sentinelos<<EOF
https://secdb.sentineloslinux.org/$_rel/main.json
https://secdb.sentineloslinux.org/$_rel/community.json
EOF
}
